@using Ecommerce.Models;
@using Ecommerce.data;
@model CheckoutViewModel

@if (Model.Message != null)
{
    <div class="alert alert-success" role="alert">@Model.Message</div>
}
@if (Model.Customer == null)
{
    <div class="well" style="width:800px; margin-left:200px">
        <form method="POST" action="/Home/Checkout">
            <div class="form-group">
                <label for="first-name">First Name</label>
                <input type="text" class="form-control" name="FirstName" placeholder="First Name" required>
            </div>
            <div class="form-group">
                <label for="last-name">Last Name</label>
                <input type="text" class="form-control" name="LastName" placeholder="Last Name" required>
            </div>
            <div class="form-group">
                <label for="Address">Address</label>
                <input type="text" class="form-control" name="Address" placeholder="Address" required>
            </div>
            <div class="form-group">
                <label for="phone-number">Phone Number</label>
                <input type="tel" class="form-control" name="PhoneNumber" placeholder="Phone Number" required>
            </div>
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" name="EmailAddress" placeholder="Email" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
}
else
{
    <div class="well" style="width:800px; margin-left:200px">
        <form method="POST" action="/Home/UpdateCustomer">
            <div class="form-group">
                <label for="first-name">First Name</label>
                <input type="text" class="form-control" name="FirstName" placeholder="First Name" required value="@Model.Customer.FirstName">
            </div>
            <div class="form-group">
                <label for="last-name">Last Name</label>
                <input type="text" class="form-control" name="LastName" placeholder="Last Name" required value="@Model.Customer.LastName">
            </div>
            <div class="form-group">
                <label for="Address">Address</label>
                <input type="text" class="form-control" name="Address" placeholder="Address" required value="@Model.Customer.Address">
            </div>
            <div class="form-group">
                <label for="phone-number">Phone Number</label>
                <input type="tel" class="form-control" name="PhoneNumber" placeholder="Phone Number" required value="@Model.Customer.PhoneNumber">
            </div>
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" name="EmailAddress" placeholder="Email" required value="@Model.Customer.EmailAddress">
            </div>
            <input type="hidden" name="Id" value="@Model.Customer.Id" />
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
}