    <form action="/Home/CheckStatus" class="form-inline" style="margin:20px">
        <div class="form-group">
            <label>To See status on a Previous Order Enter Order Number</label>
            <input type="text" class="form-control" placeholder="Order Number" name="orderId" id="order-id" />
            <button class="btn btn-primary" id="check-status">Submit</button>
        </div>
    </form>

